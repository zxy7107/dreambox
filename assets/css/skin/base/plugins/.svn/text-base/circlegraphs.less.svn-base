/* ===============================================
  Circle Graphs
================================================= */
.circle-text {
  width: 100%;
  text-align: center;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}
.circle-text h2 {
  font-family: Montserrat;
  font-weight: 400;
  font-size: 26px;
  margin-top: 0;
  margin-bottom: 5px;

  &:after{
    content: "%";
  }
}
.circle-text p {
  font-weight: 600;
  font-size: 12px;
  color: #999;
}

.info-circle-percent{
  .circle-text h2 {
    &:after{
      content: "%";
    }
  }
}

@media (min-width: 1880px) {
  .info-circle{
    max-width: 70%;
    margin: 0 auto;
  }
}

.info-circle-percent {
  max-width: 125px;
  margin: 0 auto;
}